
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/AdminPanel/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Create</h2>

<form class="forms-sample" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="exampleInputName1">Category</label>
        <select name="CategoryID" class="form-control">
            @foreach (var category in ViewBag.categories)
            {
                <option value="@category.cId">@category.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="exampleInputName1">Header</label>
        <input name="Header" type="text" class="form-control" id="exampleInputName1" placeholder="Header">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail3">Description</label>
        <textarea name="deccription" class="form-control" placeholder="Description"></textarea>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword4">Publish Date</label>
        <input name="publishDate" type="date"  class="form-control" id="exampleInputPassword4">
    </div>
   
    <div class="form-group">
        <label>New Image upload</label>
        <input type="file" name="Photo" class="form-control">
    </div>

    <button type="submit" class="btn btn-success mr-2">Create</button>
    <a href="@Url.Action("Index")" class="btn btn-light">Cancel</a>
</form>

